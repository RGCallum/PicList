<h1>{{title}}</h1>
<main>
  <h2>Edit Available Equipment</h2>




  <form action="/equipments/{{equipment._id}}?_method=PATCH" method="POST">
    <div>
      <label for="name">name: </label>
      <input type="name" name="name" value="{{equipment.name}}">
    </div>

      <div>
        <label for="available">available: </label>
        <input type="number" name="available" value="{{equipment.available}}">
      </div>
      <div>
        <label for="image">image: </label>
        <input type="text" name="image" value="{{equipment.image}}">
      </div>
    <button class="btn btn-success" type="submit">Save Equipment</button>
  </form>
  <br>

</main>