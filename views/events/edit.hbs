<h1>{{title}}</h1>
<main>
	<h2>Edit Events</h2>



	<div id="edit-form" class="user-container-show">

    <form action="/events/{{event._id}}?_method=PATCH" method="POST">
      <div>
        <label for="name">name: </label>
        <input type="text" name="name" value="{{event.name}}">
      </div>

      <div>
        <label for="date">date: </label>
        <input type="text" date="date" value="{{event.date}}">
      </div>

            <div>
        <label for="time">time: </label>
        <input type="text" time="time" value="{{event.time}}">
      </div>
            <div>
        <label for="location">location: </label>
        <input type="text" location="location" value="{{event.location}}">
      </div>
            <div>
        <label for="equipment">equipment: </label>
        <input type="text" event="event" value="{{event.equipment}}">
      </div> 

    <button>Edit Event</button>

</form>



	</div>
</main>