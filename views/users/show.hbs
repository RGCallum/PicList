<main>
  <h1>{{user.name}}'s </h1>


  <h3>upcoming events: </h3>

  <br>
  {{!-- grab all users and show their specific events by name --}}

  {{#each user.events}}
  <h3>
    <a href="/events/{{this._id}}">
      {{name}}
    </a>
  </h3>
  {{/each}}
  <br>

  <form action="/users/{{user._id}}/edit" method="PATCH">

    <button class="btn btn-primary"> Edit Profile</button>
  </form>

  <br>

  <a href="/users"><button class="btn btn-secondary">Back to list</button></a>


</main>